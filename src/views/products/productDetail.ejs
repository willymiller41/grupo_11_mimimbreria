<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <h1>Detalle del Producto</h1>
        <div class="producto-detalle">
            <div class="producto-detalle-imagen">
                <img src="/img/products/<%= producto.image %>" alt="" class="imagen">
            </div>
            <div class="producto-detalle-caracteristicas">
                <h2><%= producto.name %></h2>
                <h3>* * * * * 5 opiniones</h3>
                <h2>$ <%= producto.price %></h2>
                <h2>Descripción</h2>
                <h3><%= producto.description %></h3>
                <h2>Categoría: </h2>
                <h3><%= producto.category %></h3>
            </div>
        </div>
        <div class="producto-detalle-caracteristicas-botones">
            <button type="submit" class="producto-detalle-caracteristicas-botones-submit"><a href="/products/edit/<%= producto.id %>">Editar</a></button>
            <button type="submit" class="producto-detalle-caracteristicas-botones-submit"><a href="/products/create">Agregar</a></button>
            <button type="submit" class="producto-detalle-caracteristicas-botones-submit"><a href="/products/delete/<%= producto.id %>">Borrar</a></button>
            <button type="submit" class="producto-detalle-caracteristicas-botones-submit">Comentar</button>
            <button type="submit" class="producto-detalle-caracteristicas-botones-submit">Agregar al Carrito</button>
        </div>
        <h1>Productos Similares</h1>
        <div class="novedades-productos">
            <% productosCategory.forEach(function(producto){ %>
                <div class="productos">
