                        <p class="productos-info-titulo"><%= producto.name %></p>
                        <p>$ <%= producto.price %></p>
                    </div>
                    <div class="productos-info-botonera">
                        <a href="/products/detail/<%= producto.id %>">Ver más</a>
                        <i class="fas fa-truck"></i>
                    </div>
                </div>
            <% }) %>
        </div>
